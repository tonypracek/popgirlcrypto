    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Create floating background texts
        const cryptoTerms = [
            "explain nfts in pop terms",
            "what is a hook?",
            "how do i start in crypto?",
            "what's the tea on web3?",
            "eli5 defi pls",
            "gas fees are wild rn",
            "best crypto memes?",
            "how to spot a rug pull?",
            "what's your fav nft?",
            "crypto slang 101",
            "how to stay safe?",
            "best wallet for noobs?"
        ];

        function createFloatingTexts() {
            const container = document.getElementById('landingPage');
            const usedPositions = new Set();
            const headerRect = document.querySelector('.landing-header').getBoundingClientRect();
            
            // Clear any existing floating texts
            const existingTexts = container.querySelectorAll('.floating-text');
            existingTexts.forEach(text => text.remove());
            
            cryptoTerms.forEach((term, index) => {
                const text = document.createElement('div');
                text.className = 'floating-text';
                text.textContent = term;
                
                let x, y;
                let attempts = 0;
                const maxAttempts = 50;
                
                do {
                    x = Math.random() * (window.innerWidth - 300);
                    y = Math.random() * (window.innerHeight - 200);
                    attempts++;
                    
                    if (attempts >= maxAttempts) {
                        return;
                    }
                } while (isOverlapping(x, y, usedPositions) || isInHeaderArea(x, y, headerRect));
                
                usedPositions.add(`${Math.floor(x/100)}_${Math.floor(y/100)}`);
                
                text.style.left = `${x}px`;
                text.style.top = `${y}px`;
                
                const delay = Math.random() * 15;
                const duration = 15 + Math.random() * 10;
                text.style.animationDelay = `${delay}s`;
                text.style.animationDuration = `${duration}s`;
                
                container.appendChild(text);
            });
        }

        function isOverlapping(x, y, usedPositions) {
            // Check if the position is too close to any existing text
            const gridX = Math.floor(x/100);
            const gridY = Math.floor(y/100);
            
            // Check surrounding grid cells
            for (let dx = -1; dx <= 1; dx++) {
                for (let dy = -1; dy <= 1; dy++) {
                    if (usedPositions.has(`${gridX + dx}_${gridY + dy}`)) {
                        return true;
                    }
                }
            }
            
            return false;
        }

        // Call the function when the page loads and on window resize
        document.addEventListener('DOMContentLoaded', function() {
            createFloatingTexts();
            const subtitle = document.querySelector('.landing-subtitle');
            subtitle.style.width = '0';
            setTimeout(() => {
                subtitle.style.width = '100%';
            }, 100);
        });

        window.addEventListener('resize', createFloatingTexts);

        function expandSite() {
            const landingPage = document.querySelector('.landing-page');
            const mainContent = document.querySelector('.main-content');
            const chatToggle = document.querySelector('.chat-toggle');
            const returnButton = document.querySelector('.return-to-launch');
            
            // Add fade-out class to landing page
            landingPage.classList.add('fade-out');
            
            // After fade-out animation completes, show main content
            setTimeout(() => {
                landingPage.style.display = 'none';
                mainContent.style.display = 'block';
                
                // Show return button
                returnButton.style.display = 'flex';
                setTimeout(() => returnButton.classList.add('visible'), 100);
                
                // Trigger reflow
                void mainContent.offsetWidth;
                
                // Add fade-in class to main content
                mainContent.classList.add('fade-in');
                
                // Show the chat toggle button
                chatToggle.classList.add('visible');
                
                // Recreate sparkles for new content
                createPageSparkles();
            }, 800);
        }

        function returnToLaunch() {
            const landingPage = document.querySelector('.landing-page');
            const mainContent = document.querySelector('.main-content');
            const chatToggle = document.querySelector('.chat-toggle');
            const returnButton = document.querySelector('.return-to-launch');
            
            // Hide return button
            returnButton.classList.remove('visible');
            setTimeout(() => returnButton.style.display = 'none', 300);
            
            // Hide chat toggle
            chatToggle.classList.remove('visible');
            
            // Show landing page
            landingPage.style.display = 'flex';
            landingPage.classList.remove('fade-out');
            
            // Hide main content
            mainContent.classList.remove('fade-in');
            mainContent.style.display = 'none';
            
            // Recreate particle effects
            createFloatingTexts();
        }

        // Add tab switching functionality
        function switchTab(tabId) {
            // Add bubble pop effect to the clicked button
            const clickedButton = document.querySelector(`[onclick="switchTab('${tabId}')"]`);
            clickedButton.style.animation = 'none';
            void clickedButton.offsetWidth; // Trigger reflow
            clickedButton.style.animation = 'bubble-pop 0.3s ease-out';
            
            // Hide all tab contents
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(content => {
                content.style.display = 'none';
            });
            
            // Show selected tab content
            const selectedTab = document.getElementById(tabId);
            if (selectedTab) {
                selectedTab.style.display = 'block';
            }
            
            // Update section title
            const sectionTitle = document.getElementById('section-title');
            const titles = {
                'intro': 'Welcome to Crypto Pop!',
                'crypto101': 'Crypto 101: The Basics',
                'crypto102': 'Crypto 102: Advanced Concepts',
                'crypto103': 'Crypto 103: Advanced Concepts',
                'uniswap': 'The Uniswap Phenomenon'
            };
            sectionTitle.textContent = titles[tabId] || 'Welcome to Crypto Pop!';
        }

        // Initialize first tab as active
        document.addEventListener('DOMContentLoaded', function() {
            switchTab('intro');
        });

        // Add event listener for Enter key in chat input
        document.getElementById('chatInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                sendMessage();
            }
        });

        // Function to send message
        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            
            if (message) {
                // Add user message to chat
                addMessage(message, 'user');
                
                // Clear input
                input.value = '';
                
                // Canned responses for example questions
                const cannedResponses = {
                    'What is Bitcoin?': 'Think of Bitcoin like digital gold, but way more fun! 🎵 It\'s like the "Single Ladies" of crypto - everyone wants a piece, and it\'s always in demand. Just like Beyoncé\'s hit song, when you own Bitcoin, you let everyone know you\'re independent and in control of your financial future! 💃',
                    'Explain NFTs in pop terms': 'NFTs are like concert tickets to the digital world! 🎫 Just like how Taylor Swift\'s Eras Tour tickets are unique and prove you were there, NFTs prove you own a unique digital item. They\'re the VIP passes of the internet - no two are exactly alike! ✨',
                    'What is DeFi?': 'DeFi is like the Spotify of finance! 🎵 Instead of needing a bank (like needing iTunes to buy music), you can do everything directly on platforms like Uniswap (like streaming any song instantly). It\'s financial freedom at your fingertips, just like having your entire music library in your pocket! 🎧',
                    'How do I start in crypto?': 'Starting in crypto is like learning TikTok dances! 💃 Start with the basics by connecting your wallet to Uniswap, do your research (watch those tutorials), and never swap more than you\'re willing to lose (just like you wouldn\'t try a backflip on your first day!). Take it step by step, and soon you\'ll be crypto-fluent! 🌟',
                    'What are gas fees?': 'Gas fees are like Uber surge pricing for the blockchain! 🚗 When Uniswap is busy (like rush hour), fees go up. When it\'s quiet (like 3 AM), fees are lower. It\'s all about timing your swaps, just like choosing the best time to order your ride! ⏰',
                    'What is a blockchain?': 'A blockchain is like a never-ending group chat where everyone has a copy! 💬 Think of it like a Twitter thread where each tweet is linked to the one before it, and everyone can see the entire conversation. When you trade on Uniswap, every swap becomes part of this permanent record - transparent, secure, and impossible to delete! 😅'
                };

                // Check if the message matches any canned response
                const response = cannedResponses[message] || 'I\'m here to help you understand crypto through pop culture! Ask me anything about Bitcoin, NFTs, DeFi, or other crypto topics, and I\'ll explain it using fun references you\'ll love! 💖';

                // Simulate typing delay
                setTimeout(() => {
                    addMessage(response, 'assistant');
                }, 1000);
            }
        }

        // Function to add message to chat
        function addMessage(text, sender) {
            const chatMessages = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `chat-message ${sender}-message`;
            messageDiv.innerHTML = `
                <div class="message-content">
                    ${text}
                </div>
            `;
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function toggleChat() {
            const chat = document.getElementById('popGirlChat');
            const toggleButton = document.querySelector('.chat-toggle');
            
            chat.style.display = chat.style.display === 'none' ? 'block' : 'none';
            toggleButton.style.display = chat.style.display === 'none' ? 'flex' : 'none';
            
            // When opening chat, focus the input
            if (chat.style.display === 'block') {
                document.getElementById('chatInput').focus();
            }
        }

        // Add typing animation to subtitle
        document.addEventListener('DOMContentLoaded', function() {
            const subtitle = document.querySelector('.landing-subtitle');
            subtitle.style.width = '0';
            setTimeout(() => {
                subtitle.style.width = '100%';
            }, 100);
        });

        // Add cycling terms functionality
        const subjects = {
            'pop': ['Pop', 'Sports', 'Films', 'Games', 'Pets', 'Food', 'Tech', 'Style', 'Travel', 'Art', 'Science', 'History', 'Biz', 'Health', 'Music', 'Books', 'Nature', 'Space'],
            'sports': ['Sports', 'NBA', 'Soccer', 'Olympics', 'ESPN', 'Athlete'],
            'movies': ['Films', 'Hollywood', 'Marvel', 'Netflix', 'Cinema', 'Director'],
            'gaming': ['Games', 'Console', 'Streamer', 'Esports', 'MMO', 'RPG'],
            'animals': ['Pets', 'Wildlife', 'Ocean', 'Jungle', 'Safari', 'Nature'],
            'food': ['Food', 'Cooking', 'Restaurant', 'Chef', 'Recipe', 'Cuisine']
        };

        let currentSubject = 'pop';
        let currentTermIndex = 0;
        const cyclingTerm = document.querySelector('.cycling-term');

        function setSubject(subject) {
            currentSubject = subject;
            currentTermIndex = 0;
            cycleTerms();
        }

        function cycleTerms() {
            currentTermIndex = (currentTermIndex + 1) % subjects[currentSubject].length;
            cyclingTerm.style.animation = 'none';
            void cyclingTerm.offsetWidth; // Trigger reflow
            cyclingTerm.style.animation = 'term-change 0.5s ease-out';
            
            setTimeout(() => {
                const newTerm = subjects[currentSubject][currentTermIndex];
                cyclingTerm.textContent = newTerm;
                
                // Calculate optimal font size
                const baseSize = 3.6; // Base font size in rem
                const textLength = newTerm.length;
                let fontSize;
                
                if (textLength <= 4) {
                    fontSize = baseSize; // Full size for short words
                } else if (textLength <= 6) {
                    fontSize = baseSize * 0.9; // 90% size for medium words
                } else if (textLength <= 8) {
                    fontSize = baseSize * 0.8; // 80% size for longer words
                } else {
                    fontSize = baseSize * 0.7; // 70% size for very long words
                }
                
                cyclingTerm.style.setProperty('--dynamic-font-size', `${fontSize}rem`);
                
                // Fine-tune if still overflowing
                const container = cyclingTerm.getBoundingClientRect();
                const text = cyclingTerm.getBoundingClientRect();
                
                if (text.width > container.width) {
                    const ratio = container.width / text.width * 0.95; // 95% of container width
                    fontSize *= ratio;
                    cyclingTerm.style.setProperty('--dynamic-font-size', `${fontSize}rem`);
                }
            }, 250);
        }

        // Initialize cycling terms
        document.addEventListener('DOMContentLoaded', function() {
            setInterval(cycleTerms, 3000);
        });

        // Add this function to handle example questions
        function askQuestion(question) {
            const input = document.getElementById('chatInput');
            input.value = question;
            sendMessage();
        }

        function createPageSparkles() {
            const container = document.getElementById('sparkleContainer');
            const sparkleCount = 12; // Slightly reduced count
            
            // Clear existing sparkles
            container.innerHTML = '';
            
            for (let i = 0; i < sparkleCount; i++) {
                const sparkle = document.createElement('div');
                sparkle.className = 'page-sparkle';
                sparkle.textContent = '✨';
                
                // Random positions and sizes
                const size = 0.4 + Math.random() * 1.2; // Slightly smaller sizes
                const startX = Math.random() * window.innerWidth;
                const startY = Math.random() * window.innerHeight;
                
                // Create random movement path with smaller range
                const moveRange = 150; // Reduced movement range
                const midX = startX + (Math.random() - 0.5) * moveRange;
                const midY = startY + (Math.random() - 0.5) * moveRange;
                const endX = midX + (Math.random() - 0.5) * moveRange;
                const endY = midY + (Math.random() - 0.5) * moveRange;
                const finalX = endX + (Math.random() - 0.5) * moveRange;
                const finalY = endY + (Math.random() - 0.5) * moveRange;
                
                // Set custom properties
                sparkle.style.setProperty('--size', `${size}rem`);
                sparkle.style.setProperty('--duration', `${5 + Math.random() * 5}s`); // Slightly slower
                sparkle.style.setProperty('--delay', `${Math.random() * 5}s`);
                sparkle.style.setProperty('--startX', `${startX}px`);
                sparkle.style.setProperty('--startY', `${startY}px`);
                sparkle.style.setProperty('--midX', `${midX}px`);
                sparkle.style.setProperty('--midY', `${midY}px`);
                sparkle.style.setProperty('--endX', `${endX}px`);
                sparkle.style.setProperty('--endY', `${endY}px`);
                sparkle.style.setProperty('--finalX', `${finalX}px`);
                sparkle.style.setProperty('--finalY', `${finalY}px`);
                
                container.appendChild(sparkle);
            }
        }

        // Initialize sparkles when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            createPageSparkles();
            // Recreate sparkles periodically
            setInterval(createPageSparkles, 10000); // Slightly longer interval
        });

        // Recreate sparkles on window resize
        let resizeTimeout;
        window.addEventListener('resize', function() {
            // Debounce the resize event
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(createPageSparkles, 250);
        });

        // Add this at the beginning of your script section
        function createLaunchSparkles() {
            const container = document.getElementById('launchSparkleContainer');
            const sparkleCount = 15; // Slightly more sparkles for the launch page
            
            // Clear existing sparkles
            container.innerHTML = '';
            
            for (let i = 0; i < sparkleCount; i++) {
                const sparkle = document.createElement('div');
                sparkle.className = 'launch-sparkle';
                sparkle.textContent = '✨';
                
                // Random size between 0.4rem and 1.6rem
                const size = 0.4 + Math.random() * 1.2;
                
                // Random positions within viewport
                const startX = Math.random() * window.innerWidth;
                const startY = Math.random() * window.innerHeight;
                
                // Calculate movement range (150px in any direction)
                const range = 150;
                const midX = startX + (Math.random() * range - range/2);
                const midY = startY + (Math.random() * range - range/2);
                const endX = midX + (Math.random() * range - range/2);
                const endY = midY + (Math.random() * range - range/2);
                const finalX = endX + (Math.random() * range - range/2);
                const finalY = endY + (Math.random() * range - range/2);
                
                sparkle.style.setProperty('--size', `${size}rem`);
                sparkle.style.setProperty('--duration', `${5 + Math.random() * 5}s`); // 5-10s duration
                sparkle.style.setProperty('--delay', `${Math.random() * 5}s`);
                sparkle.style.setProperty('--startX', `${startX}px`);
                sparkle.style.setProperty('--startY', `${startY}px`);
                sparkle.style.setProperty('--midX', `${midX}px`);
                sparkle.style.setProperty('--midY', `${midY}px`);
                sparkle.style.setProperty('--endX', `${endX}px`);
                sparkle.style.setProperty('--endY', `${endY}px`);
                sparkle.style.setProperty('--finalX', `${finalX}px`);
                sparkle.style.setProperty('--finalY', `${finalY}px`);
                
                container.appendChild(sparkle);
            }
        }

        // Initialize launch sparkles when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            createLaunchSparkles();
            // Recreate sparkles periodically
            setInterval(createLaunchSparkles, 10000);
        });

        // Recreate sparkles on window resize with debounce
        let launchResizeTimeout;
        window.addEventListener('resize', () => {
            clearTimeout(launchResizeTimeout);
            launchResizeTimeout = setTimeout(createLaunchSparkles, 250);
        });
    </script>
</body>
</html> 
